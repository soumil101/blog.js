{{! Partial for a single post }}
<div class="post">
    <div class="post-avatar">
        <img src="/avatar/{{username}}" alt="{{username}}'s Avatar">
    </div>
    <div class="post-content preserve-newlines">
        <h3>{{title}}</h3>
        <p>{{content}}</p>
        <p>Posted by {{username}} on {{timestamp}}</p>
        <div class="post-status-bar">
            <span>{{likes}} â™¥</span>
            <button class="delete-button" data-id="{{id}}" onclick="handleDeleteClick(event)">Delete</button>
            {{#unless (includes likedBy ../user.username)}}
                <button class="like-button" data-id="{{id}}" onclick="handleLikeClick(event)">Like</button>
            {{/unless}}
        </div>        
    </div>
</div>

<script>
    function handleLikeClick(event) {
        const postId = event.target.getAttribute('data-id');
        fetch(`/like/${postId}`, { method: 'POST' })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    console.error('Failed to like the post.');
                }
            });
    }

    function handleDeleteClick(event) {
        const postId = event.target.getAttribute('data-id');
        fetch(`/delete/${postId}`, { method: 'POST' })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    console.error('Failed to delete the post.');
                }
            });
    }
</script>
